<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>RootServlet</servlet-name>
        <servlet-class>by.HomeWork.controller.RootServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RootServlet</servlet-name>
        <url-pattern>/ui/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogServlet</servlet-name>
        <servlet-class>by.HomeWork.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogServlet</servlet-name>
        <url-pattern>/ui/singIn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>by.HomeWork.controller.UserRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/ui/singUp</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>by.HomeWork.service.ActiveUsersListener</listener-class>
    </listener>


</web-app>